generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AllInstaUser {
  id        String     @id @default(uuid())
  createdAt DateTime   @default(now())
  userName  String
  emailId   String?
  image     String?
  token     String?
  allImgs   AllImgs[]
  allMsgs   AllMsgs[]
  allPolls  AllPolls[]
  allPosts  AllPost[]
}

model AllMsgs {
  id        String       @id @default(uuid())
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  userId    String
  msg       String
  sender    String
  user      AllInstaUser @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model AllPost {
  id        String       @id @default(uuid())
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  userId    String
  post      String
  user      AllInstaUser @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model AllImgs {
  id        String       @id @default(uuid())
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  userId    String
  publicUrl String
  user      AllInstaUser @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model AllPolls {
  id        String       @id @default(uuid())
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  userId    String
  question  String
  user      AllInstaUser @relation(fields: [userId], references: [id], onDelete: Cascade)
  options   Options[]
}

model Options {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  pollsId     String
  optionsName String
  like        Int
  poll        AllPolls @relation(fields: [pollsId], references: [id], onDelete: Cascade)
}
